{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "nim c ${file}",
            "problemMatcher": [],
            "options": {"cwd": "${fileDirname}"},
        },
        {
            "label": "run",
            "type": "shell",
            "command": "nim c --run ${file}",
            "problemMatcher": [],
            "options": {"cwd": "${fileDirname}"},
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}